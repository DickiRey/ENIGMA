<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dodge"
    tools:context=".SignUpMahasiswa">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maha"
        android:textColor="@color/putih"
        android:textAlignment="center"
        android:textSize="32sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textStyle="bold"/>
    <!-- nim-->
    <EditText
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/textView2"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_centerInParent="true"
        android:textColor="@color/put"
        android:textAlignment="center"
        android:hint="@string/nimm"
        android:autofillHints="@string/nimm"/>
    <!--nama-->
    <EditText
        android:id="@+id/editText9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/editText5"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:textColor="@color/put"
        android:hint="@string/namaa"
        android:autofillHints="@string/namaa"/>
    <!--email-->
    <EditText
        android:id="@+id/editText10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/editText9"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="@color/put"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:hint="@string/email"
        android:autofillHints="@string/email"/>
    <!--password-->
    <EditText
        android:id="@+id/editText11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/editText10"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/put"
        android:hint="@string/pass"
        android:autofillHints="@string/pass"/>
    <!--sign up-->
    <Button
        android:id="@+id/buttondaftarmahasiswa"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:layout_alignTop="@+id/editText11"
        android:layout_marginTop="97dp"
        android:text="@string/Akun"
        android:background="@drawable/custombutton"
        android:layout_centerInParent="true" />
    <!--log in-->
    <Button
        android:id="@+id/kembalikelogin"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:layout_alignTop="@id/buttondaftarmahasiswa"
        android:layout_marginTop="70dp"
        android:background="@drawable/custombutton"
        android:text="@string/login"
        android:layout_centerInParent="true"/>

</RelativeLayout>