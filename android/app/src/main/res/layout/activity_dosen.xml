<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dodge"
    tools:context=".DosenActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/backlogdosen"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/backk"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:textColor="@color/putih"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:textStyle="bold"
        android:textSize="32sp" />
    <!--input email-->
    <EditText
        android:id="@+id/emaildsnlogin"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="@string/email"
        android:gravity="center"
        android:layout_marginTop="150dp"
        android:layout_centerInParent="true"
        android:layout_alignTop="@id/textView4"/>
    <!--input password-->
    <EditText
        android:id="@+id/passdsnlogin"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/pass"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_alignTop="@id/emaildsnlogin"
        android:layout_marginTop="60dp"/>
    <TextView
        android:id="@+id/showpassdsn"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/passdsnlogin"
        android:layout_alignTop="@id/passdsnlogin"
        android:text="@string/show"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="15dp"/>
    <!--button masuk-->
    <Button
        android:id="@+id/buttonmasukdosen"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:layout_alignTop="@id/passdsnlogin"
        android:layout_centerInParent="true"
        android:layout_marginTop="140dp"
        android:text="@string/masuk"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="16sp"
        android:background="@drawable/custombutton"/>
    <!--button akun baru-->
    <Button
        android:id="@+id/buttonsignupdosen"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:layout_alignTop="@id/buttonmasukdosen"
        android:layout_centerInParent="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/custombutton"
        android:text="@string/Akun"
        android:textSize="16sp" />
</RelativeLayout>