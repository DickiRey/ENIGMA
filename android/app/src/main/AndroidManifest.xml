<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.enigma">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AbsenScanner"></activity>
        <activity
            android:name=".MakulActivity"
            android:label="KELAS"
            android:parentActivityName=".MasukDosen" />
        <activity
            android:name=".QRCode"
            android:label="QR CODE"
            android:parentActivityName=".MasukMahasiswa" />
        <activity android:name=".itemkelas" />
        <activity
            android:name=".ListKehadiran"
            android:parentActivityName=".MasukDosen" />
        <activity android:name=".MasukMahasiswa"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".MasukDosen"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity
            android:name=".DosenActivity"
            android:label="DOSEN"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".MahaActivity"
            android:label="MAHASISWA"
            android:parentActivityName=".HomeActivity" />
        <activity android:name=".HomeActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>